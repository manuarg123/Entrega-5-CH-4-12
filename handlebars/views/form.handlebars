
{{#> body }}
  <h1>Agregar Producto</h1>
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  <form action="/product" method="POST">
    <div class="mb-3">
      <label for="title" >Nombre</label>
      <input
        type="text"
        id="title"
        name="title"
        value="{{title}}"
      />
    </div>
    <div class="mb-3">
      <label for="price" >Precio</label>
      <input
        type="text"
        id="price"
        name="price"
        value="{{price}}"
      />
    </div>
    <div class="mb-3">
      <label for="thumbnail" >Foto</label>
      <input
        type="text"
        id="thumbnail"
        name="thumbnail"
        value="{{thumbnail}}"
      />
    </div>
    <button class="btn btn-danger">Crear Producto</button>
  </form>
{{/body}}